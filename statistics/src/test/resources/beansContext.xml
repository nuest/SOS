<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
        
        <context:annotation-config></context:annotation-config>

	<context:component-scan base-package="org.n52.sos.statistics">
		<context:include-filter type="annotation" expression="javax.inject.Singleton" />
	</context:component-scan>

	<bean id="sosRequestResolver" class="org.n52.sos.statistics.sos.SosRequestLoggingResolver"
		scope="singleton"></bean>

	<bean id="sosRequestLoggerListener" class="org.n52.sos.statistics.sos.SosStatisticsLoggerListener"
		scope="singleton"></bean>

	<!-- Resolvers -->
	<bean id="describeSensorResolver"
		class="org.n52.sos.statistics.sos.resolvers.DescribeSensorRequestResolver" scope="prototype"></bean>
	<bean id="getCapabilitiesResolver"
		class="org.n52.sos.statistics.sos.resolvers.GetCapabilitiesRequestResolver" scope="prototype"></bean>
	<bean id="getObservationResolver"
		class="org.n52.sos.statistics.sos.resolvers.GetObservationRequestResolver" scope="prototype"></bean>

</beans>